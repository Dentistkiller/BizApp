@model BizApp.Models.TxScore

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TxScore</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="tx_id" />
            <div class="form-group">
                <label asp-for="run_id" class="control-label"></label>
                <select asp-for="run_id" class="form-control" asp-items="ViewBag.run_id"></select>
                <span asp-validation-for="run_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="score" class="control-label"></label>
                <input asp-for="score" class="form-control" />
                <span asp-validation-for="score" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="label_pred" /> @Html.DisplayNameFor(model => model.label_pred)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="threshold" class="control-label"></label>
                <input asp-for="threshold" class="form-control" />
                <span asp-validation-for="threshold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="reason_json" class="control-label"></label>
                <input asp-for="reason_json" class="form-control" />
                <span asp-validation-for="reason_json" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="explained_at" class="control-label"></label>
                <input asp-for="explained_at" class="form-control" />
                <span asp-validation-for="explained_at" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

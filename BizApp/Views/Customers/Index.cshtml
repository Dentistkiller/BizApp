@model IEnumerable<BizApp.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email_hash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone_hash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.created_at)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email_hash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone_hash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.created_at)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.customer_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.customer_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.customer_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

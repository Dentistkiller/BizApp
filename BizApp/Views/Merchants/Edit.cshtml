@model BizApp.Models.Merchant
@using System.Globalization

@{
    ViewData["Title"] = "Edit Merchant";
    var categories = new[] { "Retail", "Electronics", "Grocery", "Fuel", "Online" };
    var risks = new[] { "low", "medium", "high" };

    // For datetime-local input display (if you allow editing created_at)
    string ToLocalInput(DateTime dt)
        => dt.ToString("yyyy-MM-ddTHH\\:mm", CultureInfo.InvariantCulture);
}

<h1 class="mb-3">Edit Merchant</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="merchant_id" />

            <div class="col-12">
                <label asp-for="name" class="form-label">Name</label>
                <input asp-for="name" class="form-control" placeholder="e.g., Checkers Hyper" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="category" class="form-label">Category</label>
                <select asp-for="category" class="form-select">
                    @foreach (var c in categories)
                    {
                        <option value="@c" selected="@(Model.category?.Equals(c, StringComparison.OrdinalIgnoreCase) == true)">
                            @c
                        </option>
                    }
                </select>
                <span asp-validation-for="category" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="risk_level" class="form-label">Risk Level</label>
                <select asp-for="risk_level" class="form-select">
                    @foreach (var r in risks)
                    {
                        <option value="@r" selected="@(Model.risk_level?.Equals(r, StringComparison.OrdinalIgnoreCase) == true)">
                            @r
                        </option>
                    }
                </select>
                <span asp-validation-for="risk_level" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="country" class="form-label">Country</label>
                <input asp-for="country" class="form-control" placeholder="ZA" />
                <span asp-validation-for="country" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Created At (UTC)</label>
                <!-- If you want it editable, use asp-for with type="datetime-local" and convert -->
                <input name="created_at" type="datetime-local" class="form-control"
                       value="@ToLocalInput(Model.created_at)" />
                <span asp-validation-for="created_at" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model BizApp.Models.Merchant
@using System.Globalization

@{
    ViewData["Title"] = "Merchant Details";
    string RiskClass(string risk) => risk?.ToLowerInvariant() switch
    {
        "high" => "bg-danger",
        "medium" => "bg-warning text-dark",
        _ => "bg-success"
    };
    var createdStr = Model.created_at.ToString("yyyy-MM-dd HH:mm:ss", CultureInfo.InvariantCulture);
}

<h1 class="mb-3">Merchant</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <div>
                <h3 class="card-title mb-1">@Model.name</h3>
                <div class="text-muted">ID: @Model.merchant_id</div>
            </div>
            <div class="d-flex gap-2">
                <span class="badge @RiskClass(Model.risk_level)">Risk: @Model.risk_level</span>
                <span class="badge bg-secondary">Category: @Model.category</span>
                <span class="badge bg-light text-dark">Country: @Model.country</span>
            </div>
        </div>

        <dl class="row mb-0">
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.category</dd>

            <dt class="col-sm-3">Country</dt>
            <dd class="col-sm-9">@Model.country</dd>

            <dt class="col-sm-3">Risk Level</dt>
            <dd class="col-sm-9">
                <span class="badge @RiskClass(Model.risk_level)">@Model.risk_level</span>
            </dd>

            <dt class="col-sm-3">Created At</dt>
            <dd class="col-sm-9">@createdStr</dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.merchant_id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

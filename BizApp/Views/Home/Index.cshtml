@{
    ViewData["Title"] = "Home - VeriPay";
}

<div class="container my-5">
    <!-- Hero Section -->
    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold">Welcome to VeriPay</h1>
        <p class="lead text-muted">
            Secure every payment with real-time fraud detection and smart transaction monitoring.
        </p>
        <div class="mt-4">
            <a asp-controller="Auth" asp-action="Register" class="btn btn-primary btn-lg me-2">Get Started</a>
            <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-secondary btn-lg">Sign In</a>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row text-center mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm p-4 h-100">
                <div class="mb-3">
                    <i class="bi bi-shield-lock display-4 text-primary"></i>
                </div>
                <h4 class="fw-bold">Fraud Protection</h4>
                <p class="text-muted">Stay ahead with AI-powered fraud detection that safeguards your business and customers.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-4 h-100">
                <div class="mb-3">
                    <i class="bi bi-graph-up display-4 text-success"></i>
                </div>
                <h4 class="fw-bold">Smart Analytics</h4>
                <p class="text-muted">Gain insights into transaction trends with detailed dashboards and reporting tools.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-4 h-100">
                <div class="mb-3">
                    <i class="bi bi-credit-card display-4 text-warning"></i>
                </div>
                <h4 class="fw-bold">Seamless Payments</h4>
                <p class="text-muted">Fast, reliable, and secure payment verification that keeps your business moving.</p>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="bg-light p-5 rounded text-center shadow-sm">
        <h2 class="fw-bold mb-3">Ready to secure your transactions?</h2>
        <p class="lead text-muted">Join VeriPay today and experience the next generation of payment security.</p>
        <a asp-controller="Auth" asp-action="Register" class="btn btn-success btn-lg">Create Your Account</a>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
